<body>
    <div class="wrapper fadeInDown">
  <div id="formContent">
    <!-- Tabs Titles -->

    <!-- Icon -->
    <div class="fadeIn first">
      <h2>HealthyFitness</h2><br>
      <h2>Влизане</h2>
    </div>
                {{#if message}}
                <div class="alert">
                <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> 
                <strong>{{message}}</strong> 
                </div>
                {{/if}}
    <!-- Login Form -->
    <form action="/auth/login" method="POST">
      <input type="text" id="email" class="fadeIn second" name="email" placeholder="Емейл">
      <input type="password" id="pass" class="fadeIn second" name="pass" placeholder="Парола">
      <input type="submit" class="fadeIn fourth" value="Влизане">
    </form>

    <!-- Remind Passowrd -->
    <div id="formFooter">
      <a class="underlineHover" href="#">Забравена Парола?</a>
    </div>
    <div id="formFooter">
      <a class="underlineHover" href="/register">Нямате Регистрация?</a>
    </div>
  </div>
